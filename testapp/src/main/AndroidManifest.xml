<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto">

    <uses-permission
        android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TjgerApp">
        <activity
            android:name="com.tjger.testapp.ui.frame.TestMainFrame"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:largeHeap="true"
            android:launchMode="standard"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.hagru.hgbase.HGBasePreferenceActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name="com.tjger.testapp.ui.dialog.TestNewGameDialog"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name="com.tjger.gui.internal.PartsDlg"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
    </application>

</manifest>